<body class="body1">


    <a href="/"><img src="/assets/images/logo.png"></a>

    <div class="box effect5" style="height:530px">
        <h2>Sign In</h2>
        <h5>to continue to Project Manager</h5>

        <% if(errors.length>0){ %>
<div id="myAlert"  class="alert alert-danger alert-dismissable">
  <button type="button" class="close" data-dismiss="alert" aria-label="close">
    <span aria-hidden="true">&times;</span>
  </button>
  <b><%= errors %></b>
</div>
<% } %>

     <form method="POST" action="/login">
      <label>Enrollment</label>
      <input type="text" name="Enrollment" placeholder="14103103" required />
      <label>DOB</label>
      <input type ="text" name = "DOB" placeholder="dd/mm/yy" required />
       <label>Password</label>
      <input type="password" name="password" placeholder="*******" required />
      <input type="text" name="name" value="" placeholder="Full Name" style="display:none"> 
      <input type="email" name="email" value="" placeholder="example@gmail.com" style="display:none"> 
      <input type="text" name="mob" value="" placeholder="+91" style="display:none">
      <hr>
      <button type="submit" class="btn btn-info">Submit</button>
    </form>
